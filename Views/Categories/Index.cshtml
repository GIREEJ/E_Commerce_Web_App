        <h2 class="fw-bold " style="font-family: 'Poppins', sans-serif;">Manage Categories</h2>
        <a class="btn btn-success shadow-sm" asp-action="Create">
            <i class="fas fa-plus-circle me-1"></i> Add New Category
        </a>
    </div> *@
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Manage Categories</h2>

        <a class="btn btn-success shadow-sm" asp-action="Create">
            <i class="fas fa-plus-circle me-1"></i> Add New Category
        </a>
    </div>
    <div class="table-responsive shadow-sm rounded" style="height:400px; overflow-y:auto;">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-dark text-center sticky-top">
                <tr class="fw-semibold">
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center" ">
                            @item.Name
                        </td>


                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1">
                                <i class="bi bi-eye"></i> View
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>