@model ECommerceWebApp.Models.Order
@{
    ViewData["Title"] = "Order Details";
    Layout = "~/Views/Shared/_Laout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-3">Order Details</h2>

    <div class="card p-3 mb-4">
        <p><strong>Order ID:</strong> @Model.OrderId</p>
        <p><strong>User:</strong> @Model.User?.FirstName</p>
        <p><strong>Order Date:</strong> @Model.OrderDate.ToString("dd MMM yyyy hh:mm tt")</p>
        <p><strong>Total Amount:</strong> ₹@Model.TotalAmount</p>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Unit Price (₹)</th>
                <th>Subtotal (₹)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.Product?.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice</td>
                    <td>@(item.Quantity * item.UnitPrice)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
