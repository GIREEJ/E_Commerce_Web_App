<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShopEase</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ECommerceWebApp.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    @{
        var image = Context.Session.GetString("UserImage");
    }
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-primary" asp-controller="Home" asp-action="Index">ShopEase</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <!-- Left Nav -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active fw-semibold text-primary" : "")"
                               asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "ProductsCardView" ? "active fw-semibold text-primary" : "")"
                               asp-controller="Products" asp-action="ProductsCardView">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Privacy" ? "active fw-semibold text-primary" : "")"
                               asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                    </ul>

                    <!-- Search Bar -->
                    <form class="d-flex me-3" method="get" asp-controller="Product" asp-action="Search">
                        <input class="form-control me-2" type="search" name="query" placeholder="Search products..." aria-label="Search" />
                        <button class="btn btn-outline-primary" type="submit"><i class="fas fa-search"></i></button>
                    </form>

                    <!-- Right Nav: Cart and Auth -->
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item me-3">
                            <a class="nav-link position-relative" asp-controller="CartItems" asp-action="UserCartView">
                                <i class="fas fa-shopping-cart fa-lg"></i>
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                   @((ViewBag.CartCount ?? 0).ToString()) 
                                    @* <vc:cart-count></vc:cart-count> *@
                                </span>
                            </a>
                        </li>
                        @{
                            var role = Context.Session.GetString("Role");
                            var name = Context.Session.GetString("Name");
                            if (@role == "User")
                            {
                        
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                        @{
                                            var userImage = Context.Session.GetString("UserImage");
                                            string imageUrl = !string.IsNullOrEmpty(userImage)
                                            ? Url.Content($"{userImage}")
                                            : Url.Content("~/Uploads/Images/User/default-user.jfif");
                                        }
                                        <img src="@imageUrl" class="img-circle" width="35" height="35" style="object-fit:cover;" /> @name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                        <li><a class="dropdown-item" asp-controller="Profiles" asp-action="UserProfile">My Profile</a></li>
                                        <li><a class="dropdown-item" asp-controller="OrderItems" asp-action="MyOrders" asp-route-userId="@ViewBag.Email">My Orders</a>
                                        </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">Logout</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="registerDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Register
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="registerDropdown">
                                    <li>
                                            <a class="dropdown-item" asp-controller="Account" asp-action="RegisterUser"><i class="fas fa-user-circle me-1"></i>User</a>
                                    </li>
                                    <li>
                                            <a class="dropdown-item" asp-controller="Account" asp-action="RegisterAdmin"><i class="fas fa-user-shield me-1"></i> Admin</a>
                                    </li>
                                </ul>
                            </li>
                        }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-light border-top text-center py-3 mt-auto">
        <div class="container">
            &copy; 2025 - ShopEase. All rights reserved. |
            <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("Styles", required: false)
</body>
</html>
