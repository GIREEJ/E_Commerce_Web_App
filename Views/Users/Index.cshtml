@model IEnumerable<ECommerceWebApp.Models.User>

@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Users List</li>
        </ol>
    </nav>
</div>
<form asp-action="Index" method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <input type="text" name="name" value="@Context.Request.Query["name"]"
               class="form-control" placeholder="Search by name,email,mobile" />
    </div>
    <div class="col-md-auto">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search"></i> Search
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-x-circle"></i> Clear
        </a>
    </div>
</form>


<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Users List</h2>
    <a class="btn btn-success" asp-action="Create">Add New User</a>
</div>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Gender</th>
            <th>Email</th>
            <th>Mobile No.</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.Gender</td>
                <td>@item.Email</td>
                <td>@item.Mobile</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-sm btn-info">Details</a>
                    <a asp-route-id="@item.UserId" onclick="resetPassword('@item.UserId')" class="btn btn-secondary btn-sm me-1">Reset Password</a>
                    <button class="btn btn-danger btn-sm" onclick="confirmDelete('@item.UserId')"><i class="fas fa-trash"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>
<!-- Confirm Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirm Deletion</h5>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this user?
            </div>
            <div class="modal-footer">
                <form asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" id="deleteUserId" name="userId" />
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
                function confirmDelete(userId) {
            document.getElementById('deleteUserId').value = userId;
            var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }

        function resetPassword(userId) {
            alert("reset pwd called");
             $.get('/Users/ResetPassword', { userId: userId }, function (data) {
                           
                        });
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        @if (TempData["EditSuccess"] != null)
        {
            <text>
                    Swal.fire({
                        icon: 'success',
                        title: 'Updated',
                        text: '@TempData["EditSuccess"]'
                    });
            </text>
        }
        else if (TempData["DeleteSuccess"] != null)
        {
            <text>
                    Swal.fire({
                        icon: 'success',
                        title: 'Deleted',
                        text: '@TempData["DeleteSuccess"]'
                    });
            </text>
        }
    </script>
}

