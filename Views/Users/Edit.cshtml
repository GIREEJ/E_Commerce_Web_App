@model ECommerceWebApp.ViewModels.RegisterUserVM
@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Edit User</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="UserId" />

    <div class="row mb-3">
        <div class="col">
            <label asp-for="FirstName" class="form-label"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="LastName" class="form-label"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Gender" class="form-label"></label>
        <select asp-for="Gender" class="form-select">
            <option value="">-- Select Gender --</option>
            <option>Male</option>
            <option>Female</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Mobile" class="form-label"></label>
        <input asp-for="Mobile" class="form-control" />
        <span asp-validation-for="Mobile" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImageFile">Current Image</label><br />
        @if (!string.IsNullOrEmpty(Model.ExistingImagePath))
        {
            <img src="~/UserImages/@Model.ExistingImagePath" alt="User Image" width="100" />
        }
    </div>

    <div class="mb-3">
        <label asp-for="DateOfBirth" class="form-label"></label>
        <input asp-for="DateOfBirth" class="form-control" type="date" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Address" class="form-label"></label>
        <textarea asp-for="Address" class="form-control"></textarea>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="row mb-3">
        <div class="col">
            <label asp-for="CountryId"></label>
            <select asp-for="CountryId" class="form-select" asp-items="ViewBag.CountryId"></select>
        </div>
        <div class="col">
            <label asp-for="StateId"></label>
            <select asp-for="StateId" class="form-select" asp-items="ViewBag.StateId"></select>
        </div>
        <div class="col">
            <label asp-for="CityId"></label>
            <select asp-for="CityId" class="form-select" asp-items="ViewBag.CityId"></select>
        </div>
    </div>

    <div class="text-end">
        <button type="submit" class="btn btn-success">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
