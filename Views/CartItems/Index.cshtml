    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">My Cart</h2>

    </div>
    <div>
        <form asp-action="Index" method="get" class="row g-2 mb-3">
            <div class="col-md-4">
                <input type="text" name="name" value="@Context.Request.Query["name"]"
                       class="form-control" placeholder="Search by name,category" />
            </div>
            <div class="col-md-auto">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search"></i> Search
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Clear
                </a>
            </div>
        </form>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle me-2"></i>No items in your cart.
        </div>
    }
    else
    {
        <div class="table-responsive ">
            <table class="table table-striped table-bordered align-middle">
                <thead class="table-dark text-center">
                    <tr>
                        <th scope="col">Product</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Unit Price</th>
                        <th scope="col">Total</th>
                        <th scope="col">User</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var unitPrice = item.Product?.Price ?? 0;
                        var total = unitPrice * item.Quantity;

                        <tr>
                            <td>
                                <strong>@item.Product?.Name</strong><br />
                                <small class="text-muted">@item.Product?.Category</small>
                            </td>
                            <td class="text-center">@item.Quantity</td>
                            <td class="text-end">@unitPrice.ToString("C")</td>
                            <td class="text-end">@total.ToString("C")</td>
                            <td>@item.User?.FirstName @item.User?.LastName</td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-info btn-sm me-1">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                <a asp-action="UpdateStock" asp-route-id="@item.ProductId" class="btn btn-warning btn-sm me-1">
                                    <i class="bi bi-pencil-square"></i> Update Stock
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
